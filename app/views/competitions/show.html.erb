<div class="container">
  <%= @competition.name %>
  <%= @competition.created_at.strftime('%d-%m-%Y') %>

  <%= link_to "Edit", edit_competition_path(@competition) %> |
  <% if current_user.role =! "referee" %>
    <%= button_to "Delete", competition_path(@competition), method: :delete, data: {turbo_confirm: "Are you sure?"} %>
  <% end %>
  <%= link_to "Back", competitions_path %>
</div>
