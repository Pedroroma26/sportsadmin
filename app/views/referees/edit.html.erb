<div class="container">
  <h1>Edit Referee</h1>

  <%= form_with model: @referee, url: referee_path(@referee), data: { turbo_method: "PATCH" } do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>

    <%= f.submit "Update Referee", class: "btn btn-primary" %>

    <% if @referee.errors.any? %>
      <div class="alert alert-danger">
        <h4>Errors:</h4>
        <ul>
          <% @referee.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

  <%= link_to "Back", referee_path(@referee), class: "btn btn-secondary mt-3" %>
</div>
