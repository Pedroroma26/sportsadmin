<div class="show-container">
  <div class="show-games">
    <div class="game-teams">
      <p>
        <%= cl_image_tag @game.club_home.photo.key, height: 30, width: 30, crop: :fill, class: "rounded-top-4 me-2 mr-1", style: "background-color: white;" %>
        <strong><%= @game.club_home.name %> (<%= @game.club_home.abbreviation %>)</strong>
      </p>
      <p class="vs-text">vs</p>
      <p>
        <strong><%= @game.club_away.name %> (<%= @game.club_away.abbreviation %>)</strong>
        <%= cl_image_tag @game.club_away.photo.key, height: 30, width: 30, crop: :fill, class: "rounded-top-4 me-2 mr-1", style: "background-color: white;" %>
      </p>
    </div>
    <%# ----------------trocar para geocode------------------ %>
    <img class="geocode-field" src="https://alumniandfriends.tufts.edu/sites/default/files/2020-01/CAM_01_FIELDS_ZOOM%20%28FH%29.jpg" alt="">
    <div class="lower-div">
      <div>
        <p>Location: <%= @game.club_home.address %></p>
        <p>Date: <%= @game.game_date.strftime('%d-%m-%Y') %> | <%= @game.game_date.strftime('%H:%M') %></p>
          <% if @game.referee.present? %>
            <p>Referee: <%= @game.referee.full_name %></p>
          <% else %>
            <p>Referee: Not assigned </p>
          <% end %>
      </div>
      <div>
        <div>
          <%= link_to "Report", report_game_path(@game), class: "btn btn-primary button-report" %>
        </div>
        <div class="d-flex justify-content-around align-items-center my-3">
          <%= link_to "Edit", edit_game_path(@game), class: "text-decoration-none btn btn-outline-success btn-sm rounded-4 mr-2"  %>
          <%= link_to "Delete", game_path(@game), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none btn btn-outline-danger btn-sm rounded-4 mr-2" %>
        </div>
      <div>
    </div>
  </div>
</div>
